<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#E5CCFF"
    tools:context="com.example.asmita.converter.WordCounterActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="  Enter the text : "
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_purple"
        android:text="submit" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="76dp"
        android:text="Count : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginEnd="42dp"
        android:textSize="20dp"
        android:layout_below="@+id/submit"
        android:layout_alignEnd="@+id/submit" />

    <TextView
        android:id="@+id/output"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="43dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignTop="@+id/tv2"
        android:textSize="20dp"
        android:layout_alignStart="@+id/submit" />
</RelativeLayout>
