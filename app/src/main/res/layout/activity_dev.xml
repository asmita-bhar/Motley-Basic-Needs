<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    tools:context="com.example.asmita.converter.devActivity">

    <ImageView
        android:id="@+id/me"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/me"
        android:layout_alignTop="@+id/bio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/aboutMe"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:text="About Me"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/bio"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:layout_marginTop="23dp"
        android:text="Hey there! :) Hope you're having a fine day! This is my new application as an Android dev. Thanks for trying this app out and showing your support. Be ready for more such apps in the days to come. :D"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_below="@+id/aboutMe"
        android:layout_alignEnd="@+id/rateApp" />

    <TextView
        android:id="@+id/git"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/url"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#0000FF"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/sign"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/rateApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="              Rate this app :"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_below="@+id/git"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/me"
        android:layout_below="@+id/me"
        android:layout_alignStart="@+id/me"
        android:layout_marginTop="13dp" />

    <RatingBar
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/rateApp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
