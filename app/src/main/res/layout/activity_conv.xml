<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5CCFF"
    tools:context="com.example.asmita.converter.ConvActivity">

    <TextView
        android:id="@+id/tvb"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Binary : "
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="23dp"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvd"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="39dp"
        android:text="Decimal :"
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/tvb"
        android:layout_alignStart="@+id/tvb" />

    <TextView
        android:id="@+id/tvo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_alignStart="@+id/tvd"
        android:layout_below="@+id/tvd"
        android:layout_marginTop="51dp"
        android:text="Octal : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/tvh"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="47dp"
        android:textSize="15dp"
        android:text="Hexadecimal :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/tvo"
        android:layout_alignStart="@+id/tvo" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvh"
        android:layout_marginTop="57dp"
        android:layout_toStartOf="@+id/tvhi"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Submit" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignEnd="@+id/tvhi"
        android:layout_marginEnd="40dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_purple"
        android:text="clear" />

    <EditText
        android:id="@+id/tvbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/tvb"
        android:layout_alignBottom="@+id/tvb"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/tvb" />

    <EditText
        android:id="@+id/tvdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_above="@+id/tvo"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/tvd" />

    <EditText
        android:id="@+id/tvoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/tvo"
        android:layout_toEndOf="@+id/tvo" />

    <EditText
        android:id="@+id/tvhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvh"
        android:layout_toEndOf="@+id/tvh"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center" />
</RelativeLayout>
